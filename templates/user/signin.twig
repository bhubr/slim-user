{% extends "layout.html" %}

{% block content %}
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Sign in</h1>
      <form method="POST">
        <input type="hidden" name="csrf_name" value="{{ csrfName }}">
        <input type="hidden" name="csrf_value" value="{{ csrfValue }}">

        <div class="form-group">
          <label for="inputEmail1">Email address</label>
          <input name="email" type="email" class="form-control" id="inputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="inputPassword1">Password</label>
          <input name="password" type="password" class="form-control" id="inputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
{% endblock %}
